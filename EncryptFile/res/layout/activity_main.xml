<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.encryptfile.MainActivity" >

    <ListView
        android:id="@+id/listViewFile"
        android:layout_width="match_parent"
        android:layout_height="1200px"
        android:layout_below="@+id/btnSearch"
        android:layout_alignParentStart="true">
    </ListView>

    <Button
        android:id="@+id/btnPaste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnCut"
        android:layout_alignBottom="@+id/btnCut"
        android:layout_marginLeft="23dp"
        android:layout_toRightOf="@+id/btnDelete"
        android:text="Paste" 
        android:onClick="btnPasteClick"/>

    <Button
        android:id="@+id/btnCopy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copy"
        android:onClick="btnCopyClick"
        android:layout_above="@+id/btnNewFile"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnCut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnEncrypt"
        android:layout_alignRight="@+id/listViewFile"
        android:text="Cut" 
        android:onClick="btnCutClick"/>

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnSearchClick"
        android:text="Search"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/btnPaste" />

    <Button
        android:id="@+id/btnUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnUpClick"
        android:text="Up"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

	<Button
	    android:id="@+id/btnNewFile"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:onClick="btnNewFileClick"
	    android:text="New File"
        android:layout_alignTop="@+id/btnDecrypt"
        android:layout_alignStart="@+id/listViewFile" />

	<Button
	    android:id="@+id/btnDecrypt"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:onClick="btnDecryptClick"
	    android:text="Decrypt"
        android:layout_below="@+id/btnPaste"
        android:layout_toEndOf="@+id/btnNewFile" />

	<Button
	    android:id="@+id/btnDelete"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/btnNewFile"
	    android:layout_toRightOf="@+id/btnNewFile"
	    android:onClick="btnDeleteClick"
	    android:text="Delete" />

	<Button
	    android:id="@+id/btnEncrypt"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:onClick="btnEncryptClick"
	    android:text="Encrypt"
        android:layout_alignTop="@+id/btnStore"
        android:layout_toEndOf="@+id/btnDecrypt" />

	<EditText
	    android:id="@+id/edtFileName"
	    android:layout_width="300px"
	    android:layout_height="wrap_content"
        android:ems="10"
        android:layout_alignBottom="@+id/btnUp"
        android:layout_alignEnd="@+id/btnDelete" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store"
        android:id="@+id/btnStore"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="btnStoreClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download"
        android:onClick="btnDownloadClick"
        android:id="@+id/btnDownload"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btnSearch"
        android:textSize="15dp" />

</RelativeLayout>